<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_game"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/game_status_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingStart="8dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_network_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/home_team_logo_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:paddingTop="4dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            app:layout_constraintTop_toBottomOf="@+id/game_status_text_view"
            app:layout_constraintLeft_toLeftOf="@+id/game_status_text_view"
            app:layout_constraintRight_toRightOf="@+id/game_status_text_view"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/forward_nav" />

        <TextView
            android:id="@+id/home_team_logo_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/home_team_logo_image_view"
            app:layout_constraintTop_toTopOf="@+id/home_team_logo_image_view"
            app:layout_constraintBottom_toBottomOf="@+id/home_team_logo_image_view"/>

        <TextView
            android:id="@+id/home_team_record_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingTop="4dp"
            android:textColor="@color/grey"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/home_team_logo_text_view"
            app:layout_constraintTop_toTopOf="@+id/home_team_logo_image_view"
            app:layout_constraintBottom_toBottomOf="@+id/home_team_logo_image_view"/>

        <TextView
            android:id="@+id/home_team_score_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingEnd="8dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/tv_network_text_view"
            app:layout_constraintRight_toRightOf="@+id/tv_network_text_view"
            app:layout_constraintTop_toBottomOf="@+id/tv_network_text_view" />

        <ImageView
            android:id="@+id/away_team_logo_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:contentDescription="@string/forward_nav"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_team_logo_image_view" />

        <TextView
            android:id="@+id/away_team_logo_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/black"
            android:paddingEnd="4dp"
            app:layout_constraintStart_toEndOf="@+id/away_team_logo_image_view"
            app:layout_constraintTop_toTopOf="@+id/away_team_logo_image_view"
            app:layout_constraintBottom_toBottomOf="@+id/away_team_logo_image_view"/>

        <TextView
            android:id="@+id/away_team_record_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/grey"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/away_team_logo_text_view"
            app:layout_constraintTop_toTopOf="@+id/away_team_logo_image_view"
            app:layout_constraintBottom_toBottomOf="@+id/away_team_logo_image_view" />

        <TextView
            android:id="@+id/away_team_score_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingEnd="8dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/tv_network_text_view"
            app:layout_constraintRight_toRightOf="@+id/tv_network_text_view"
            app:layout_constraintTop_toBottomOf="@+id/home_team_score_text_view" />

        <View
            android:id="@+id/v_footer"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:alpha="0.7"
            android:background="@color/ltgrey"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/away_team_score_text_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/highlight_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello dadadadad dadasdad dadasd"
            android:orientation="horizontal"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/away_team_score_text_view"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>