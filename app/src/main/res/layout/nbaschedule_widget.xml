<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nba_schedule_widget"
    android:layout_width="@dimen/layout_width"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/rel_padding"
        android:background="@color/white">
        <ImageView
            android:id="@+id/home_team_logo_image_view"
            android:layout_width="@dimen/image_view_size"
            android:layout_height="@dimen/image_view_size"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="false"/>
        <TextView
            android:id="@+id/home_team_logo_text_view"
            android:layout_below="@id/home_team_logo_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="false"/>
        <TextView
            android:id="@+id/home_team_score_text_view"
            android:layout_toEndOf="@id/home_team_logo_text_view"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/home_team_logo_text_view"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="false"
            android:layout_marginStart="@dimen/text_v_margin"/>
        <TextView
            android:id="@+id/game_status_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/away_team_score_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignBaseline="@+id/home_team_logo_text_view"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="false"
            android:layout_toStartOf="@+id/away_team_logo_text_view"
            android:layout_marginEnd="@dimen/text_v_margin"/>
        <ImageView
            android:id="@+id/away_team_logo_image_view"
            android:layout_width="@dimen/image_view_size"
            android:layout_height="@dimen/image_view_size"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="false"/>
        <TextView
            android:id="@+id/away_team_logo_text_view"
            android:layout_below="@+id/away_team_logo_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@+id/home_team_logo_text_view"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="false"/>
    </RelativeLayout>
</LinearLayout>